        <button class="w-full flex items-center justify-between hover:text-nasa focus:outline-none" onclick="toggleMenu('resourcesMenu')">
          <span class="flex items-center gap-3">
            <i class="fas fa-rocket"></i> Resources
          </span>
          <i class="fas fa-chevron-down"></i>
        </button>
        <ul id="resourcesMenu" class="ml-6 mt-2 hidden space-y-2">
          <li>
            <a href="#" class="hover:text-nasa" onclick="showContent('tutorials')">Tutorials</a>
