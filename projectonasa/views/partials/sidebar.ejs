        </button>
        <ul id="candidateMenu" class="ml-6 mt-2 hidden space-y-2">
          <li>
            <a href="#" class="hover:text-nasa" onclick="showContent('newCandidate')">New Candidate</a>
          </li>
          <li>
            <a href="#" class="hover:text-nasa" onclick="showContent('manageCandidate')">Manage Candidates</a>
          </li>
        </ul>
      </li>

      <!-- Add Tables -->
      <li>
        <button class="w-full flex items-center justify-between hover:text-nasa focus:outline-none" onclick="toggleMenu('tablesMenu')">
          <span class="flex items-center gap-3">
            <i class="fas fa-table"></i> Add Tables
          </span>
          <i class="fas fa-chevron-down"></i>
        </button>
        <ul id="tablesMenu" class="ml-6 mt-2 hidden space-y-2">
          <li>
            <a href="#" class="hover:text-nasa" onclick="showContent('newTable')">New Table</a>
          </li>
          <li>
            <a href="#" class="hover:text-nasa" onclick="showContent('manageTable')">Manage Tables</a>
          </li>
        </ul>
      </li>

      <!-- Model Information -->
      <li>
        <button class="w-full flex items-center justify-between hover:text-nasa focus:outline-none" onclick="toggleMenu('modelMenu')">
          <span class="flex items-center gap-3">
            <i class="fas fa-info-circle"></i> Model Information
          </span>
          <i class="fas fa-chevron-down"></i>
        </button>
        <ul id="modelMenu" class="ml-6 mt-2 hidden space-y-2">
          <li>
            <a href="#" class="hover:text-nasa" onclick="showContent('aboutModel')">About the Model</a>
