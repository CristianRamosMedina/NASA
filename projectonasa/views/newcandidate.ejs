<!-- Estilos -->
<style>
  .rotate-header {
    writing-mode: vertical-rl;
    transform: rotate(180deg);
    white-space: nowrap;
    vertical-align: middle;
    font-size: 0.75rem;
    font-weight: bold;
    padding: 8px 2px;
  }

  input[type="text"] {
    border: 1px solid #555;
    border-radius: 4px;
    padding: 4px;
    background-color: #111;
