<div id="workspace" class="p-6 text-space-star" style="min-height: 100vh;">
  <!-- Botones principales -->
  <div class="flex justify-between mb-4">
    <button id="addRowBtn" class="bg-space-accent px-4 py-2 rounded">➕ Add Row</button>
    <button id="submitBtn" class="bg-green-600 px-4 py-2 rounded">🚀 Submit</button>
  </div>

  <!-- Contenedor principal -->
  <div class="flex gap-6 items-start">
    
    <!-- 🪐 Planeta a la izquierda -->
    <div id="planetDisplay" class="flex-shrink-0 relative w-64 h-64">
      <div class="absolute inset-0 flex items-center justify-center">
        <div class="w-64 h-64 border border-planet rounded-full animate-spin-slow relative">
          <div class="absolute w-8 h-8 bg-space-accent rounded-full shadow-lg animate-orbit"></div>
        </div>
      </div>
    </div>

    <!-- 📊 Contenedor de entrada de datos -->
    <div id="inputContainer" class="flex-1">
      <!-- Aquí se inyectará el formulario de entrada -->
    </div>

    <!-- 📋 Contenedor de resultados (oculto inicialmente) -->
    <div id="resultContainer" class="flex-1 hidden">
      <!-- Aquí se inyectarán los resultados -->
    </div>

  </div>
</div>

<!-- Script -->
<script src="/js/newcandidate.js"></script>

<!-- Estilos -->
<style>
  .animate-spin-slow {
    animation: spin 20s linear infinite;
  }

  .animate-orbit {
    animation: orbit 20s linear infinite;
  }

  @keyframes spin {
    from { transform: rotate(0deg); }
    to { transform: rotate(360deg); }
  }

  @keyframes orbit {
    from { transform: rotate(0deg) translateX(128px) rotate(0deg); }
    to { transform: rotate(360deg) translateX(128px) rotate(-360deg); }
  }
</style>