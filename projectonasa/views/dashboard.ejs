<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>NASA Dashboard</title>
    <link rel="stylesheet" href="/css/styles.css">
    <script src="https://kit.fontawesome.com/a2e0f1f1b0.js" crossorigin="anonymous"></script>
    <!-- Space font -->
    <link href="https://fonts.googleapis.com/css2?family=Orbitron:wght@400;700&display=swap" rel="stylesheet">
</head>

<body class="flex min-h-screen bg-space-dark text-space-star font-orbitron relative overflow-hidden">

    <!-- Canvas Espacial (planetas reales + explosiones) -->
    <canvas id="spaceCanvas" class="absolute inset-0 -z-10"></canvas>

    <!-- Sidebar -->
    <%- include('partials/sidebar') %>

        <!-- Main content -->
        <main class="flex-1 p-6 bg-transparent relative z-10">
            <!-- Workspace dinÃ¡mico -->
            <div id="workspace" class="bg-space-dark bg-opacity-80 p-6 rounded-xl shadow-lg">
                <h1 class="text-3xl font-bold text-rocket flex items-center">
                    ðŸš€ Welcome to ExoFinder
                </h1>
                <p class="mt-2 text-space-star">
                    Select an option from the sidebar menu to continue.
                </p>
            </div>
        </main>

        <!-- Script para manejar workspace dinÃ¡mico -->
        <script>
            function toggleMenu(id) {
                const allMenus = document.querySelectorAll('nav ul[id$="Menu"]');
                allMenus.forEach(menu => {
                    if (menu.id !== id) menu.classList.add("hidden");
                });
                const menu = document.getElementById(id);
                menu.classList.toggle("hidden");
            }

            function showContent(section) {
                const workspace = document.getElementById("workspace");
                workspace.innerHTML = "";

                switch (section) {
                    case "newCandidate":
                        workspace.innerHTML = `
            <h2 class="text-2xl font-bold mb-4">New Candidate</h2>
            <p>No hay datos para mostrar</p>
          `;
                        break;
                    case "manageCandidate":
                        workspace.innerHTML = `
            <h2 class="text-2xl font-bold mb-4">Manage Candidates</h2>
            <p>No hay datos para mostrar</p>
          `;
                        break;
                    case "newTable":
                        workspace.innerHTML = `
            <h2 class="text-2xl font-bold mb-4">New Table</h2>
            <p>No hay datos para mostrar</p>
          `;
                        break;
                    case "manageTable":
                        workspace.innerHTML = `
            <h2 class="text-2xl font-bold mb-4">Manage Tables</h2>
            <p>No hay datos para mostrar</p>
          `;
                        break;
                    default:
                        workspace.innerHTML = `
            <h1 class="text-3xl font-bold text-rocket flex items-center">
              ðŸš€ Welcome to ExoFinder
            </h1>
            <p class="mt-2 text-space-star">
              Select an option from the sidebar menu to continue.
            </p>
          `;
                }
            }

            // Eventos para los links del menÃº
            document.addEventListener("DOMContentLoaded", () => {
                document.querySelectorAll("#candidateMenu a").forEach(link => {
                    link.addEventListener("click", e => {
                        e.preventDefault();
                        const section = link.textContent.replace(/\s+/g, "").toLowerCase();
                        if (section.includes("newcandidate")) showContent("newCandidate");
                        if (section.includes("managecandidates") || section.includes("managecandidate")) showContent("manageCandidate");
                    });
                });

                document.querySelectorAll("#tablesMenu a").forEach(link => {
                    link.addEventListener("click", e => {
                        e.preventDefault();
                        const section = link.textContent.replace(/\s+/g, "").toLowerCase();
                        if (section.includes("newtable")) showContent("newTable");
                        if (section.includes("managetables") || section.includes("managetable")) showContent("manageTable");
                    });
                });
            });
        </script>

        <!-- EXO Chat Widget -->
        <div id="exoWidget" class="fixed bottom-4 right-4 z-50">
            <!-- Chat Button -->
            <button id="exoChatBtn" class="bg-nasa hover:bg-rocket text-space-dark font-bold p-4 rounded-full shadow-lg transition-all">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 10h.01M12 10h.01M16 10h.01M9 16H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-5l-5 5v-5z"></path>
                </svg>
            </button>

            <!-- Chat Panel -->
            <div id="exoChatPanel" class="hidden fixed bottom-20 right-4 w-96 h-[500px] bg-space-dark border-2 border-nasa rounded-lg shadow-2xl flex flex-col z-50">
                <!-- Header -->
                <div class="bg-nasa text-space-dark p-3 rounded-t-lg flex items-center justify-between flex-shrink-0">
                    <div class="flex items-center gap-2">
                        <div class="w-3 h-3 bg-green-400 rounded-full animate-pulse"></div>
                        <span class="font-bold">EXO Assistant</span>
                    </div>
                    <button id="exoCloseBtn" class="hover:text-rocket">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                        </svg>
                    </button>
                </div>

                <!-- Messages -->
                <div id="exoMessages" class="flex-1 overflow-y-auto p-4 space-y-3 bg-space-darker" style="max-height: 380px; overflow-y: scroll;">
                    <div class="text-space-star text-sm italic">
                        Hello! I'm EXO, your Exoplanet Expert Assistant. Ask me about Kepler features, model statistics, or any exoplanet classification questions!
                    </div>
                </div>

                <!-- Input -->
                <div class="p-3 border-t border-planet flex-shrink-0">
                    <form id="exoChatForm" class="flex gap-2">
                        <input
                            type="text"
                            id="exoInput"
                            placeholder="Ask EXO..."
                            class="flex-1 bg-space-darker text-space-star border border-planet rounded px-3 py-2 focus:outline-none focus:border-nasa"
                            autocomplete="off"
                        />
                        <button type="submit" class="bg-nasa text-space-dark px-4 py-2 rounded hover:bg-rocket transition-colors">
                            Send
                        </button>
                    </form>
                </div>
            </div>
        </div>

        <!-- Canvas espacial -->
        <script src="/js/exo-chat.js"></script>
        <script src="/js/newcandidate.js"></script>
        <script src="/js/dashboard.js"></script>
</body>

</html>